# Server configuration
PORT=3000
LOG_LEVEL=info

# Storage path for SQLite database (default: ./data)
STORAGE_PATH=./data

# File size limit in MB (default: 20)
MAX_FILE_MB=20

# OCR toggle (requires external OCR service; default: false)
ENABLE_OCR_DEFAULT=false

# Embeddings (if set, uses OpenAI text-embedding-3-small instead of TF-IDF)
# OPENAI_API_KEY=sk-...
USE_EMBEDDINGS=false

# OpenAI model for letter generation (optional; falls back to template mode)
# OPENAI_MODEL=gpt-4o
